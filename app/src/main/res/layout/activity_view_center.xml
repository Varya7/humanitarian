<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"

        android:background="@drawable/background_b">


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/center_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="8dp"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Почта"
        android:padding="8dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/fio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер телефона"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="8dp"
        tools:ignore="MissingConstraints" />

<ScrollView
    android:layout_height="250dp"
    android:layout_width="match_parent"
    android:maxHeight="250dp">
    <TextView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список вещей"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints"
        android:padding="8dp"
        android:textSize="20sp"/>
</ScrollView>
        <Space android:layout_height="10dp" android:layout_width="match_parent">
        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:gravity="center">


    <Button
        android:id="@+id/appl"
        android:text="Отправить заявку"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:singleLine="false"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        />


        <Button
            android:id="@+id/route"
            android:text="Построить маршрут"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:singleLine="false"
            />
        </LinearLayout>
</LinearLayout>
</ScrollView>