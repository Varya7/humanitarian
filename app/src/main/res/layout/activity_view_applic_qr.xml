<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_b"
    android:paddingTop="?attr/actionBarSize"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <!-- Сообщение об ошибке -->
        <LinearLayout
            android:id="@+id/linearLayoutError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Карточка с данными пользователя -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F8FA"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Дата -->
                <LinearLayout
                    android:id="@+id/linearLayoutDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Дата"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Дата"
                        android:textColor="#2A4D8F"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Время -->
                <LinearLayout
                    android:id="@+id/linearLayoutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Время"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Время"
                        android:textColor="#0B8638"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Почта -->
                <LinearLayout
                    android:id="@+id/linearLayoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Почта"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Почта"
                        android:textColor="#2A4D8F"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- ФИО -->
                <LinearLayout
                    android:id="@+id/linearLayoutFio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ФИО"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="ФИО"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Телефон -->
                <LinearLayout
                    android:id="@+id/linearLayoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Телефон"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Телефон"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Дата рождения -->
                <LinearLayout
                    android:id="@+id/linearLayoutBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Дата рождения"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/birth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Дата рождения"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка со списком содержимого заявки -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F8FA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Содержимое заявки"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/bg_white_card"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка: выданные товары + кнопка -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFDFF"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выданные товары"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/bg_white_card"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/status"
                    android:text="Выдано"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
