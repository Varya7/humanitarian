<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_b"
    android:paddingTop="?attr/actionBarSize"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <!-- Карточка с данными заявки -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F8FA"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Дата -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Дата"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Дата"
                        android:textColor="#2A4D8F"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Время -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Время"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Время"
                        android:textColor="#0B8638"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Почта"
                        android:textColor="#2A4D8F"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- ФИО -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ФИО"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="FIO"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Телефон -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Телефон"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Номер телефона"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Дата рождения -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Дата рождения"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/birth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Дата рождения"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка со списком заявленных позиций -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F8FA"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Заявленные вещи"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Список выбранных товаров в карточке со скруглёнными углами -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFDFF"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выбранные товары"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/bg_white_card"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!-- Комментарий -->
        <EditText
            android:id="@+id/comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Введите комментарий"
            android:padding="12dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:background="@drawable/bg_white_card"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Кнопки -->
        <Button
            android:id="@+id/statusT"
            android:text="Принять заявку"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/statusF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отклонить заявку"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif"
            android:textColor="#DC3545"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
