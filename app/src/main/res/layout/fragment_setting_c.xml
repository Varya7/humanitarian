<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:gravity="center"
            android:background="@drawable/background_b">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/comment_background"
                android:padding="12dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Название центра -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Центр"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/center_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- Адрес -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Адрес"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- Время работы -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Время работы"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/work_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- Почта -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Почта"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- ФИО -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ФИО"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/fio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Документы, необходимые для получения заявки"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/doc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Телефон"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentLayout"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Комментарий"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/comment_background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/comm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Текст комментария"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>



            <Space
                android:layout_height="10dp"
                android:layout_width="match_parent"/>

            <Button
                android:id="@+id/btn_edit_data"
                android:text="Изменить данные"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textSize="12sp"
                android:padding="10dp"
                android:paddingHorizontal="9dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white" />



            <Space
                android:layout_height="5dp"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Список имеющихся вещей"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_height="10dp"
                android:layout_width="match_parent"/>

            <Button
                android:id="@+id/btn_edit_list"
                android:text="Редактировать список"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textSize="12sp"
                android:paddingHorizontal="9dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white" />


            <Space
                android:layout_height="10dp"
                android:layout_width="match_parent"/>


            <Button
                android:id="@+id/btn_edit_list_user"
                android:text="Редактировать перечень данных для подачи заявки"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textSize="12sp"
                android:paddingHorizontal="9dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white" />

            <Space
                android:layout_height="10dp"
                android:layout_width="match_parent"/>

            <Button
                android:id="@+id/btn_edit_password"
                android:text="Изменить пароль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textSize="12sp"
                android:padding="10dp"
                android:paddingHorizontal="9dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white" />

            <Space
                android:layout_height="10dp"
                android:layout_width="match_parent"/>

            <TextView
                android:text="Выйти из аккаунта"
                android:textSize="15sp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:id="@+id/logout"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Удалить аккаунт"
                android:id="@+id/delete"
                android:textSize="15sp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/statButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape"
        android:scaleType="centerInside"
        android:src="@drawable/ic_trending_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>