<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_b"
    android:paddingTop="?attr/actionBarSize"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <!-- Карточка с данными центра -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F8FA"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Центр -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/center"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/center_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="#2A4D8F"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <!-- Адрес -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:text="@string/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <!-- Время работы -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/worktime"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/work_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="#0B8638"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <!-- Почта -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/email"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="#2A4D8F"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <!-- ФИО -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/agentfio"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/fio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <!-- Документы -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/documentstoapp"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/doc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <!-- Телефон -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_section"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/phonenumber"
                        android:textColor="#A5A5A5"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка: список имеющихся вещей -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFDFF"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/availablethingslist"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/bg_white_card"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка: список полей для подачи заявки -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFDFF"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rowstoappl"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:paddingStart="4dp"
                    android:paddingBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/bg_white_card"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Комментарий -->
        <EditText
            android:id="@+id/comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="@string/makeacomm"
            android:padding="12dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:background="@drawable/bg_white_card"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Кнопка принять -->
        <Button
            android:id="@+id/statusT"
            android:text="@string/statusT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

        <!-- Отклонить -->
        <TextView
            android:id="@+id/statusF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statusF"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#DC3545"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
