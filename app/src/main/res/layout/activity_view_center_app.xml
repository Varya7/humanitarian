<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_b"
    android:paddingTop="?attr/actionBarSize"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Название центра -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Центр"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/center_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Адрес -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Адрес"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Время работы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Время работы"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/work_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Почта -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Почта"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- ФИО -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ФИО"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/fio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Документы, необходимые для получения заявки"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/doc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Телефон"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>



        <Space
            android:layout_height="10dp"
            android:layout_width="match_parent"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список имеющихся вещей"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список полей для подачи заявки"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"

            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />


        <!-- Комментарий -->
        <EditText
            android:id="@+id/comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Введите комментарий"
            android:padding="8dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/statusT"
            android:text="Принять заявку"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/statusF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отклонить заявку"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
