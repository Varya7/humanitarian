<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@drawable/background_b">


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/center_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="8dp"
        android:gravity="center"

        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />



    <TextView
        android:paddingTop="20dp"
        android:id="@+id/work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/fio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints" />


    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/btn_edit_data"
        android:text="Изменить данные"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="12sp"
        android:padding="10dp"
        android:paddingHorizontal="9dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        />
<Space
    android:layout_height="5dp"

     android:layout_width="match_parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:maxHeight="80dp">

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        tools:ignore="MissingConstraints"

        />
    </ScrollView>



    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/btn_edit_list"
        android:text="Редактировать список"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="12sp"
        android:paddingHorizontal="9dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:padding="10dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        />

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/btn_edit_password"
        android:text="Изменить пароль"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="12sp"
        android:padding="10dp"
        android:paddingHorizontal="9dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        />

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>
    <TextView
        android:text="Выйти из аккаунта"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/logout"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Удалить аккаунт"
        android:id="@+id/delete"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>



</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape1"
        app:menu="@menu/lower_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>