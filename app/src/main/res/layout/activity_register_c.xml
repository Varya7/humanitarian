<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_b"
    tools:context=".RegisterC">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">

        <TextView
            android:text="@string/register_center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/name_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/center_name"
            android:maxLength="300"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxLength="1000"
            android:scrollbars="vertical"
            android:fontFamily="sans-serif"
            android:hint="@string/address"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/work_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Часы работы"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="254"
            android:hint="@string/email"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/fio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="500"
            android:hint="ФИО представителя"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10000"
            android:inputType="textMultiLine|textNoSuggestions"
            android:hint="Документы, необходимые для получения заявок"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:hint="Контактный телефон"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="64"
            android:hint="@string/password"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="15dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_register"
            android:text="Далее"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/loginNow"
            android:text="@string/click_to_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/reg_u"
            android:text="@string/register_user"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>