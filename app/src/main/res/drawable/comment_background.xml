<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Белый фон -->
    <solid android:color="@android:color/white" />

    <!-- Серая рамка -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Закругленные углы -->
    <corners android:radius="8dp" />

    <!-- Легкая тень -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
</shape>